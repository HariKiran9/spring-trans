CREATE TABLE ROUTE_DETAILS(ROUTE_ID NUMBER(20) PRIMARY KEY,ROUTE_NAME VARCHAR2(20), NO_STUDS NUMBER(20),TOTAL_HALTS NUMBER(20), START_POINT VARCHAR2(20), DEST_POINT VARCHAR2(20), VEHICLE_ID NUMBER(20) REFERENCES VEH_DETAILS(VEHICLE_ID), DRIVER_ID NUMBER(20) REFERENCES DRIVER_DETAILS(DRIVER_ID), HELPER_ID NUMBER(20) REFERENCES HELPER_DETAILS(HELPER_ID),
HALT_ID NUMBER(20) REFERENCES HALT_DETAILS(HALT_ID));